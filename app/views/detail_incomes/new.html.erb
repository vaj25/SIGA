<div class="ui raised very padded text container segment">
    <%= link_to "Atras", :back %>
    <h2 class="ui header">Nuevo Ingreso de √Årboles</h2>
    <div class="ui form">
        <%= form_for(@detail_income) do |f| %>

        <%= f.hidden_field :tree_id, :value=>@tree_id %>

        <div class="field">
            <%= f.label :Cantidad %><br />
            <%= f.number_field :cantidad %>
        </div>

        <div class="field">
            <%= f.label :Precio %><br />
            <%= f.number_field :precio, min: 0.01, step: 0.01, autofocus: true %>
