<div class="ui container">

    <%= link_to "Nueva junta directiva", new_general_meeting_path, class: "ui primary button" %>

    <table class="ui celled padded table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cantidad asistentes</th>
                <th>Actividad</th>
                <th>Fecha</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>

            <% @general_meetings.each do |general_meeting| %>

                  <tr>
                    <td><%= general_meeting.id %></td>
                    <td><%= general_meeting.num_asistentes %></td>
                    <td><%= general_meeting.activity.tipo %></td>
                    <td><%= general_meeting.activity.fecha_inicio %></td>
                    <td><%= general_meeting.activity.descripcion%></td>
                    <td>
                        <%= link_to raw('<div class="ui mini circular icon button" data-tooltip="Editar" data-inverted=""
                         data-position="right left" data-offset="50"><i class="large edit icon"></i></div>'),
                          edit_general_meeting_path(general_meeting) %>
                        <%= link_to raw('<div class="ui mini circular icon button" data-tooltip="Eliminar" data-inverted=""
                        data-position="right left"><i class="large erase icon"></i></div>'),
                         general_meeting_path(general_meeting), method: :delete %>
                        <%= link_to raw('<div class="ui mini circular icon button" data-tooltip="Añadir miembro" data-inverted=""
                         data-position="right left" data-offset="50"><i class="large add user icon"></i></div>'),
                          new_member_path(:general_meeting_id=>general_meeting.id) %>
                        <%= link_to raw('<div class="ui mini circular icon button" data-tooltip="Ver miembros" data-inverted=""
                        data-position="right left" data-offset="50"><i class="large browser icon"></i></div>'),
                        :controller=>"members", :action=>"index" %>
                    </td>
                </tr>

            <% end %>

        </tbody>
    </table>
    <%= link_to "Atras", :controller=>"dashboard", :action=>"index" %>

</div>
