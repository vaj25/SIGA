<div class="ui raised very padded text container segment">
    <%= link_to "Atras", :back %>
    <h2 class="ui header">Nuevo Recurso de Arbol</h2>
    <div class="ui form">
        <%= form_for(@resource_activities_tree) do |f| %>

          <%= f.hidden_field :resource_activity_id, :value=>@resource_activity_id %>
          <%= f.hidden_field :activity_id, :value=>@activity_id %>

          <div class="field">
            <%= f.label :arbol %><br />
            <%= f.select("tree_id", Tree.all.collect {|p| [ p.nombre_comun, p.id ] }, { include_blank: "Seleccione Ã¡rbol" },
             { :class => 'ui search dropdown'}) %>
          </div>

        <div class="field">
            <%= f.label :cantidad %><br />
            <%= f.number_field :cantidad %>
        </div>

        <div class="actions">
            <%= f.submit "Guardar", class: "ui primary button" %>
        </div>

        <% end %>
    </div>
</div>

<%= javascript_include_tag "validate/resource_activity_tree" %>
