<div class="ui raised very padded text container segment">
    <%= link_to "Atras", :back %>
    <h2 class="ui header">Editar Punto</h2>
    <div class="ui form">
        <%= form_for(@diary) do |f| %>

        <%= f.hidden_field :id %>
        <%= f.hidden_field :meeting_id %>

        <div class="field">
            <%= f.label :Punto_a_tratar %><br />
            <%= f.text_field :discusion %>
        </div>

        <div class="field">
            <%= f.label :descripcion %><br />
            <%= f.text_area :descripcion %>
        </div>

        <div class="field">
            <%= f.label :acuerdo %><br />
            <%= f.text_area :acuerdo %>
        </div>

        <div class="actions">
            <%= f.submit "Guardar", class: "ui primary button" %>
        </div>

        <% end %>
    </div>
</div>

<%= javascript_include_tag "validate/diary" %>
