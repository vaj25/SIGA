<div class="ui raised very padded text container segment">
    <%= link_to "Atras", :back %>
    <h2 class="ui header">Editar Miembro</h2>
    <div class="ui form">
        <%= form_for(@meeting_member) do |f| %>

        <%= f.hidden_field :id %>
        <%= f.hidden_field :meeting_id %>

        <div class="field">
            <%= f.label :miembro %><br/>
            <%= f.select :member_id, options_from_collection_for_select(Member.all, :id, :primer_nombre, @meeting_member.member_id) %>
        </div>

        <div class="actions">
            <%= f.submit "Guardar", class: "ui primary button" %>
        </div>

        <% end %>
    </div>
</div>

<%= javascript_include_tag "validate/meeting_member" %>
