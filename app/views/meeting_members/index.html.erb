<div class="ui container">

    <%= link_to "Atras", :controller=>"meetings", :action=>"index" %>

    <table class="ui fixed table ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Primer nombre</th>
                <th>Segundo nombre</th>
                <th>Primer apellido</th>
                <th>Segundo apellido</th>
                <th>Cargo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>

            <% @meeting_members.each do |meeting_member| %>

                  <tr>
                    <td><%= meeting_member.id %></td>
                    <td><%= meeting_member.member.primer_nombre %></td>
                    <td><%= meeting_member.member.segundo_nombre %></td>
                    <td><%= meeting_member.member.primer_apellido%></td>
                    <td><%= meeting_member.member.segundo_apellido%></td>
                    <td><%= meeting_member.member.charge.nombre%></td>
                    <td>
                        <%= link_to raw('<div class="ui mini circular icon button" data-tooltip="Editar" data-inverted="" data-position="right left" data-offset="50">
<i class="large edit icon"></i></div>'), edit_meeting_member_path(meeting_member) %>
                        <%= link_to raw('<div class="ui mini circular icon button" data-tooltip="Eliminar" data-inverted="" data-position="right left">
<i class="large erase icon"></i></div>'), meeting_member_path(meeting_member), method: :delete %>
                    </td>
                </tr>

            <% end %>

        </tbody>
    </table>


</div>
