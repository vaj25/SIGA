<div class="ui raised very padded text container segment">
    <%= link_to "Atras", :back %>
    <h2 class="ui header">Editar Miembro</h2>
    <div class="ui form">
        <%= form_for(@member) do |f| %>

        <%= f.hidden_field :id %>

        <div class="field">
            <%= f.label :primer_nombre %><br />
            <%= f.text_field :primer_nombre %>
        </div>

        <div class="field">
            <%= f.label :segundo_nombre %><br />
            <%= f.text_field :segundo_nombre %>
        </div>

        <div class="field">
            <%= f.label :primer_apellido %><br />
            <%= f.text_field :primer_apellido %>
        </div>

        <div class="field">
            <%= f.label :segundo_apellido %><br />
            <%= f.text_field :segundo_apellido %>
        </div>

        <div class="field">
            <%= f.label :cargo %><br />
            <%= f.select :charge_id, options_from_collection_for_select(Charge.all, :id, :nombre),
                :include_blank => Member.find(@member.id).charge.nombre.to_s%>
        </div>

        <div class="field">
            <%= f.label :dui %><br />
            <%= f.number_field :dui %>
        </div>

        <div class="actions">
            <%= f.submit "Guardar", class: "ui primary button" %>
        </div>

        <% end %>
    </div>
</div>

<%= javascript_include_tag "validate/member" %>
